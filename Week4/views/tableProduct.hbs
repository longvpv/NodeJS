<div id="content">


    <div class="container-fluid">

        <h1 class="h3 mb-2 text-gray-800">Products Table</h1>


        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Products Table Example</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Short Description</th>
                                <th>Category ID</th>
                                <th>Sale Price</th>
                                <th>Original Price</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Short Description</th>
                                <th>Category ID</th>
                                <th>Sale Price</th>
                                <th>Original Price</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            {{#each products }}
                            <tr>
                                <td>{{name}}</td>
                                <td>{{shortDescription}}</td>
                                <td>{{categoryId}}</td>
                                <td>{{salePrice}} USD</td>
                                <td>{{originalPrice}} USD</td>
                                <td>
                                    <a href="/product/{{_id}}" class="btn btn-info btn-sm">
                                        <span class="text">Detail</span>
                                    </a>
                                </td>
                            </tr>
                            {{else}}
                            <td>No products!</td>
                            {{/each}}

                        </tbody>
                    </table>
                    <div class="d-flex justify-content-center align-items-center">
                        <a href="/product/create" class="btn btn-info btn-sm">
                            <span class="text">Create Product</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>